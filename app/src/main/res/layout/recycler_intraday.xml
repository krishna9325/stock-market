<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    app:cardBackgroundColor="#242424"
    android:layout_marginTop="15dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    app:cardCornerRadius="18dp"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/progress_view"
    android:foreground="?android:attr/selectableItemBackground"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">


            <TextView
                android:id="@+id/intra_day_stock_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/carme"
                android:text="Reliance"
                android:textColor="#3ab876"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/intra_day_stock_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/carme"
                android:text="14-12-2021 | 8:30AM"
                android:textColor="#F8FCFA"
                android:textSize="14sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_for_image_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_margin="15dp"
                android:layout_gravity="center"
                android:background="#242424"
                >

            <ImageView
                android:id="@+id/intra_day_stock_image"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

