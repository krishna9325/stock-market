<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="30dp"
    android:background="@drawable/recycler_view_background"
    tools:context=".ui.intraday.IntraDayFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/intra_day_stock_breakout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="#AE0F1E17"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_margin="50dp"
            app:cardCornerRadius="18dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">


                <TextView
                    android:id="@+id/intraday_stocks"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/new_rocker"
                    android:gravity="center"
                    android:text="@string/stocks_ind"
                    android:textColor="#3ab876"
                    android:textSize="30sp" />


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/intra_day_indices_breakout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="#AE0F1E17"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:layout_margin="50dp"
            app:cardCornerRadius="18dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">


                <TextView
                    android:id="@+id/intra_day_indices"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/new_rocker"
                    android:gravity="center"
                    android:text="@string/indices_ind"
                    android:textColor="#3ab876"
                    android:textSize="30sp" />


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</RelativeLayout>