<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".stocks.ui.swingBreakout.DisplaySwing">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        >

        <ImageView
            android:id="@+id/swing_display_back"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/swing_display_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/bungee"
            android:text="Stock Name"
            android:textColor="#3ab876"
            android:textSize="19sp" />


    </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/card_for_image_show"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="20dp"
        app:cardCornerRadius="15dp"
        android:background="#242424"
        >

        <ImageView
            android:id="@+id/swing_display_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/swing_display_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textSize="17sp"
        android:fontFamily="@font/new_rocker"
        android:layout_marginEnd="10dp"
        android:text="Date: " />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:fontFamily="@font/bungee"
        android:textColor="#284C6C"
        android:layout_marginEnd="10dp"
        android:text="Description: "
        />


    <TextView
        android:id="@+id/swing_display_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/custom_editext_button"
        android:paddingStart="10dp"
        android:textSize="15sp"
        android:paddingTop="5dp"
        android:fontFamily="@font/carme"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        />

</LinearLayout>


</ScrollView>