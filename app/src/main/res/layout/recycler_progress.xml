<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#242424"
    android:layout_marginTop="15dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    app:cardCornerRadius="18dp"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/progress_view"
    android:foreground="?android:attr/selectableItemBackground"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginStart="5dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="3dp"
                >

                <TextView
                    android:id="@+id/progress_stock_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/carme"
                    android:text="Reliance"
                    android:textColor="#3ab876"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/progress_stock_profit_loss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/carme"
                    android:text="Loss: 100"
                    android:textColor="#FFF"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/progress_edit"
                    android:layout_width="25dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/ic_edit"
                    android:paddingStart="3dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="3dp"
                    android:paddingBottom="4dp"
                    android:src="@drawable/ic_edit_new" />

            </RelativeLayout>

            <TextView
                android:id="@+id/proress_stock_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/carme"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="14-12-2021 | 8:30AM"
                android:textColor="#F8FCFA"
                android:textSize="14sp" />


        </LinearLayout>

</androidx.cardview.widget.CardView>